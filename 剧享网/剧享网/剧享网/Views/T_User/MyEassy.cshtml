<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>剧享网——用户个人中心</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Free HTML5 Website Template by FreeHTML5.co" />
    <meta name="keywords" content="free html5, free template, free bootstrap, free website template, html5, css3, mobile first, responsive" />

    <script src="~/Js/MyEassyGetInfoByText.js"></script>
    <script src="~/Js/MyEassyGetInfoByImg.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

    <!-- Animate.css -->
    <link rel="stylesheet" href="~/Content/Gao_Fu/animate.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="~/Content/Gao_Fu/bootstrap.css">
    <!-- Flexslider  -->
    <link rel="stylesheet" href="~/Content/Gao_Fu/flexslider.css">
    <!-- Theme style  -->
    <link rel="stylesheet" href="~/Content/Gao_Fu/style.css">
</head>
<body>
    <div id="fh5co-page">
        <aside id="fh5co-aside" role="complementary" class="border js-fullheight">

            <h1 id="fh5co-logo"><a href="/T_User/UserCenter">剧享网</a></h1>
            <nav id="fh5co-main-menu" role="navigation">
                <ul>
                    <li>
                        <img class="my_headimg" name="imgs" src="@ViewBag.MyHeadImg" style="border-radius:70%;height:70px;width:70px;" />
                        <label>@Session["UserName"].ToString()</label>
                    </li>
                    <li><a href="/T_User/MyInfo">个人信息</a></li>
                    <li><a href="/T_User/MyEassy">我的文章</a></li>
                    <li><a href="/T_User/MyVideo">我的视频</a></li>
                    <li><a href="/T_User/FollowInfo">关注信息</a></li>
                    <li class="fh5co-active"><a href="/T_User/UserCenter">用户中心</a></li>
                    <li><a href="/T_User/Index">返回主页</a></li>
                </ul>
            </nav>
            <!--版权声明-->
            <div class="fh5co-footer">
                <p><small><span>&copy; 2018 剧享网</span></small></p>
            </div>

        </aside>

        <div id="fh5co-main">
            <div class="fh5co-narrow-content">
                <h2 class="fh5co-heading animate-box" data-animate-effect="fadeInLeft">我的文章</h2>
                <a id="" href="/EassyOperation/SendMyEassy/">发布文章</a>
                <br />
                <label>你还能使用的空间大小：@ViewBag.EassySize MB</label>
                <div class="row row-bottom-padded-md">
                    @{
                        if (ViewBag.WorkCount == 0)
                        {
                            <p>官人，你目前没有发布过任何文章，要来一发吗~~</p>
                        }
                        else
                        {
                            for (int i = 0; i < ViewBag.WorkCount; ++i)
                            {
                                <div class="col-md-3 col-sm-6 col-padding animate-box" data-animate-effect="fadeInLeft">
                                    <div class="blog-entry">
                                        <div>
                                            <a name="/EassyOperation/OpenMyEassy" class="blog-img">
                                                @for (int j = i; j < (i + 1); ++j)
                                                {
                                                    string imgpath = ViewBag.ImgPath[j];
                                                    <img src="@imgpath" class="img-responsive" onclick="MyEassyGetInfoByImg(this)">
                                                }
                                            </a>
                                        </div>
                                        <div class="desc">
                                            @for (int j = i; j < (i + 1); ++j)
                                            {
                                                string workname = ViewBag.WorkName[j];
                                                string eassycontent = ViewBag.EassyContent[j];
                                                string worktime = ViewBag.WorkTime[j];
                                                <div>
                                                    <label>文章:</label>
                                                    <a name="/EassyOperation/OpenMyEassy" onclick="MyEassyGetInfoByText(this)">@workname</a>
                                                </div>
                                                <div>
                                                    <label>时间:</label>
                                                    <small>@worktime</small>
                                                </div>
                                                <div>
                                                    <label>作者:</label>
                                                    <label>@Session["UserName"]</label>
                                                </div>
                                                <div>
                                                    <label>介绍:</label>
                                                    <label>@eassycontent</label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/Js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="~/Js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="~/Js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="~/Js/jquery.waypoints.min.js"></script>
    <!-- Flexslider -->
    <script src="~/Js/jquery.flexslider-min.js"></script>


    <!-- MAIN JS -->
    <script src="~/Js/main.js"></script>

</body>
</html>

