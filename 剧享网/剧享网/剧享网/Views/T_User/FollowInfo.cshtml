                <div class="flexslider js-fullheight">
                    <div id="MyFans ">
                        <button class="fan fan_btn" id="ShowMyFans">我的粉丝<small id="FansCount">(@ViewBag.FansCount)</small></button>
                        <div id="FansInfo" class="fan fh5co-narrow-content"></div>
